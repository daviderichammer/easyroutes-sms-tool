# EasyRoutes API Configuration
# Get these credentials from your EasyRoutes account settings
EASYROUTES_CLIENT_ID=your_easyroutes_client_id_here
EASYROUTES_CLIENT_SECRET=your_easyroutes_client_secret_here

# Twilio SMS Configuration  
# Get these from your Twilio Console (https://console.twilio.com)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# Application Configuration
LOG_LEVEL=INFO
DRY_RUN=false
MAX_RETRIES=3
RETRY_DELAY=1
RATE_LIMIT_DELAY=1

# Optional: Custom API endpoints (use defaults if not specified)
# EASYROUTES_API_BASE=https://easyroutes.roundtrip.ai/api/2024-07
# TWILIO_API_BASE=https://api.twilio.com

# Optional: Message template configuration
DEFAULT_MESSAGE_TEMPLATE=default
INCLUDE_CUSTOMER_NAME=true
INCLUDE_ADDRESS=true
INCLUDE_STATUS=true

# Optional: Filtering options
INCLUDE_ARCHIVED_ROUTES=false
MAX_ROUTES_PER_EXECUTION=100
STOP_TYPES_TO_INCLUDE=DELIVERY,PICKUP,TASK

# Optional: Logging configuration
LOG_FILE_PATH=logs/easyroutes_sms_tool.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_BACKUP_COUNT=5
LOG_FORMAT=json

# Optional: Performance tuning
CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=10

